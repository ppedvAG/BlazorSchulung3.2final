@page "/person"
@page "/person/{id:int}"
@using BlazorSchulung3._2final.Data
@using System.Globalization
<h3>PersonFormular</h3>
<EditForm Model="MyProperty" OnSubmit="speichern">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">

            <InputText @bind-Value="MyProperty.Name" class="form-control"></InputText>
            <ValidationMessage For="@(()=>MyProperty.Name)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Geburtstag</label>
        <div class="col-sm-10">

            <InputDate @bind-Value="MyProperty.GebTag" class="form-control"></InputDate>
            <ValidationMessage For="@(()=>MyProperty.GebTag )"></ValidationMessage>
        </div>
    </div>
    <button class="btn btn-outline-primary" type="submit">save</button>
    <ValidationSummary></ValidationSummary>

</EditForm>
@code {
    public Person MyProperty { get; set; } = new Person();
    [Parameter]
    public int id { get; set; }
    protected override void OnAfterRender(bool firstRender)
    {
       // bind-value:culture = '@(new UICulture("de-de")'
        if (firstRender)
        {
            if (id == 0)
            {
                MyProperty = new Person();
            }
        }
    }
    void speichern()
    {


    }
}
